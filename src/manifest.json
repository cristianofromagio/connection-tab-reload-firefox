{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "default_locale": "en",
  "homepage_url": "https://github.com/cristianofromagio/connection-tab-reload-firefox",
  "icons": {
    "16": "icons/icon-light-online-16.png",
    "32": "icons/icon-light-online-32.png",
    "48": "icons/icon-light-online-48.png",
    "128": "icons/icon-light-online-128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-light-online-16.png",
      "32": "icons/icon-light-online-32.png",
      "48": "icons/icon-light-online-48.png"
    },
    "default_title": "__MSG_extensionTitle__"
  },

  "background": {
    "scripts": [
      "vendor/browser-polyfill.min.js",
      "background.js"
    ]
  }

}
