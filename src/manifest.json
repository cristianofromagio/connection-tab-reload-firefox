{
  "manifest_version": 2,
  "name": "Connection Triggered Tab Reload",
  "version": "1.0",
  "description": "Reloads current active tab when navigator status turns online again",
  "homepage_url": "https://github.com/cristianofromagio/connection-tab-reload-firefox",
  "icons": {
    "48": "icons/normal-light-48.png",
    "96": "icons/normal-light-96.png"
  },

  "permissions": [
    "tabs",
    "notifications"
  ],

  "browser_action": {
    "default_icon": "icons/on-light-38.png",
    "default_title": "Tab Reload"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js"]
    }
  ]

}
